# load scene settings
sceneBuilder.importScene('test_area.glb')
sceneBuilder.envMap = EnvMap('BlueSky.png');

# set up material
mat = Material('Floor')
mat.baseColor = float4(0.0, 0.139, 0.05, 1.0)
mat.roughness = 1.0
sceneBuilder.replaceMaterial(mat)

mat = Material('Mirror')
mat.baseColor = float4(0.9, 0.9, 0.9, 1.0)
mat.roughness = 0.0
mat.metallic = 1.0
mat.indexOfRefraction = 2.0
sceneBuilder.replaceMaterial(mat)

mat = Material('Wall')
mat.loadTexture(MaterialTextureSlot.BaseColor, 'bricks_color.png')
mat.roughness = 1.0
mat.metallic = 0.0
mat.indexOfRefraction = 2.0
sceneBuilder.replaceMaterial(mat)

mat = Material('Glass')
mat.baseColor = float4(0.0, 0.0, 0.0, 1.0)
mat.roughness = 0.0
mat.metallic = 0.0
mat.indexOfRefraction = 1.45
mat.specularTransmission = 0.95
mat.doubleSided = True
sceneBuilder.replaceMaterial(mat)

mat = Material('Impostor')
mat.loadTexture(MaterialTextureSlot.BaseColor, 'tree.png')
mat.alphaMode = 1
sceneBuilder.addMaterial(mat)

# set up lights
l = DirectionalLight('MainLight')
l.intensity = float3(10.0, 10.0, 10.0)
l.direction = float3(-0.62, -0.71, -0.31)
sceneBuilder.addLight(l)

l = DirectionalLight('AmbientLightBack')
l.intensity = float3(2.0, 2.0, 2.0)
l.direction = float3(0.62, 0.71, 0.31)
sceneBuilder.addLight(l)

l = DirectionalLight('AmbientLightLeft')
l.intensity = float3(2.0, 2.0, 2.0)
l.direction = float3(-0.62, 0.71, 0.31)
sceneBuilder.addLight(l)

l = DirectionalLight('AmbientLightRight')
l.intensity = float3(2.0, 2.0, 2.0)
l.direction = float3(0.62, 0.71, -0.31)
sceneBuilder.addLight(l)

