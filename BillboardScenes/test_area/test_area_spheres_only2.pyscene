# load scene settings
sceneBuilder.importScene('test_area.glb')
sceneBuilder.envMap = EnvMap('BlueSky.png');

# set up material
mat = Material('Floor')
mat.baseColor = float4(0.0, 0.139, 0.05, 1.0)
mat.roughness = 1.0
sceneBuilder.replaceMaterial(mat)

mat = Material('Mirror')
mat.baseColor = float4(0.9, 0.9, 0.9, 1.0)
mat.roughness = 0.0
mat.metallic = 1.0
mat.indexOfRefraction = 2.0
sceneBuilder.replaceMaterial(mat)

mat = Material('Wall')
mat.loadTexture(MaterialTextureSlot.BaseColor, 'bricks_color.png')
mat.roughness = 1.0
mat.metallic = 0.0
mat.indexOfRefraction = 2.0
sceneBuilder.replaceMaterial(mat)

mat = Material('Glass')
mat.baseColor = float4(0.001, 0.001, 0.001, 0.15)
mat.roughness = 0.0
mat.metallic = 0.0
mat.indexOfRefraction = 1.45
mat.specularTransmission = 0.95
mat.doubleSided = True
sceneBuilder.replaceMaterial(mat)

mat = Material('Spherical')
mat.loadTexture(MaterialTextureSlot.BaseColor, 'smoke_sphere_dark.png') 
mat.indexOfRefraction = 1.0
mat.doubleSided = True
sceneBuilder.addMaterial(mat)

# set up lights
l = DirectionalLight('MainLight')
l.intensity = float3(10.0, 10.0, 10.0)
l.direction = float3(-0.62, -0.71, -0.31)
sceneBuilder.addLight(l)

# create camera
camera = Camera('Camera0')
camera.position = float3(6.804514,2.521546,-2.763845)
camera.target = float3(5.846595,2.311095,-2.568650)
camera.up = float3(0.0, 1.0, 0.0)
camera.nearPlane = 0.1
camera.farPlane = 100.0
sceneBuilder.addCamera(camera)
sceneBuilder.selectedCamera = camera

